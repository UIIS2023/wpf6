        <Button Name="btnOtkazi"  Content="Otkazi" HorizontalAlignment="Left" Margin="175,119,0,0" VerticalAlignment="Top" Width="75" Click="btnOtkazi_Click" Height="19"/>
        <Label Content="Putnik:" HorizontalAlignment="Left" Margin="22,61,0,0" VerticalAlignment="Top" Width="90" />
        <ComboBox Name="cbPutnik" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="142,64,0,0" DisplayMemberPath="ime" SelectedValuePath="PutnikID"/>

    </Grid>
</Window>
